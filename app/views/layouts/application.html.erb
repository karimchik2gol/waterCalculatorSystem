<!DOCTYPE html>
<html>
  <head>
    <title>WaterCalculator</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
	  <div class="center">
	  	  <div class="top">
	  	  	<% if current_admin_user %>
	  	  		<%= link_to "Go to history", admin_histories_path %> | 
	  	  		<%= link_to "Logout", destroy_admin_user_session_path, data_method: :delete %>
		  	<% else %>
		  	  	<%= link_to "Login", new_admin_user_session_path %> |
		  	  	<%= link_to "Registration", registration_path %>
		  	<% end %>
	  	  </div>
	    <%= yield %>
	   </div>


    	<%= javascript_include_tag 'waterCalculator', 'data-turbolinks-track': 'reload' %>
  </body>
</html>
